<% content_for :sidebar do %>
  <table border="2">
    <thead>
      <tr>
        <td>Meeting</td>
        <td>start time</td>
        <td>end time</td>
      </tr>
    </thead>
    <tbody>
      <% @location.meetings.where(['start_time > ?', DateTime.now]).limit(5).each do |s| %>
      <tr>
        <td><%= s.name %></td>
        <td><%= s.start_time %></td>
        <td><%= s.end_time %></td>
      </tr>
    </tbody>

  <% end %>
    </table>
<% end %>